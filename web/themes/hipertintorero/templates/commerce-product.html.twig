{#
/**
 * @file
 *BEGIN OUTPUT from 'modules/contrib/commerce/modules/product/templates/commerce-product.html.twig'
 * Default product template.
 *
 * Available variables:
 * - attributes: HTML attributes for the wrapper.
 * - product: The rendered product fields.
 *   Use 'product' to print them all, or print a subset such as
 *   'product.title'. Use the following code to exclude the
 *   printing of a given field:
 *   @code
 *   {{ product|without('title') }}
 *   @endcode
 * - product_entity: The product entity.
 * - product_url: The product URL.
 *
 * @ingroup themeable
 */
#}
{% set product_image = product.field_images %}
<article class="page-single-product">
<div class="col-sm-6">
  <div class="images-product">
       <img class="attachment-shop-single" src="{{ file_url(product_image['#items'].entity.uri.value) }}" alt="{{ product_image.0['#item'].alt }}">
      {% for img in product_image['#items'] %}
          <img class="img-thumbnail" src="{{ file_url(img.entity.uri.value)}}" alt="{{ img.alt }}">
      {% endfor %}
  </div>
</div>

<div class="col-sm-6">
  <h1 class="product-title">{{ product.title }}</h1>
  <div class="price"><span class="amount">{{ product.variation_price }}</span></div>
  <div class="description">
    {{ product.field_descripcion_corta }}
  </div>
  <hr>{{ product.variations }}
  <div class="product-meta">
    <span>categoria:
      <a href="#">{{ product.field_category }}</a>
    </span>
    <span>tags:
      <a href="#">FatMax</a>, <a href="#">Handsaw</a>
    </span>
  </div>
  <div class="product-share-buttons">
    <span>share on:
      <a href="{{ product_url }}"><i class="fa fa-facebook"></i></a>
      <a href="{{ product_url }}"><i class="fa fa-twitter"></i></a>
      <a href="{{ product_url }}"><i class="fa fa-google-plus"></i></a>
    </span>
  </div>
  <div class="panel-group accordion-rn" id="accordion" role="tablist" aria-multiselectable="true">
          <div class="panel">
            <div class="panel-heading" role="tab" id="headingOne">
              <h4 class="panel-title">
                <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne" class="">
                  Descripcion
                </a>
              </h4>
            </div>
            <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne" aria-expanded="true" style="">
              <div class="panel-body">
                      {{ product.body }}
              </div>
            </div>
          </div>
        </div>
</article>
